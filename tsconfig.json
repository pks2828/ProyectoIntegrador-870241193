{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] 
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "jest-setup.js" 
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
